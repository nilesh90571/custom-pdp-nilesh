<div class="custom-pdp-ni">
  <div class="product-page-grid">
    {% render 'product-details-custom' %}
    {% render 'product-image-custom' %}
  </div>
</div>

<!-- Popup Modal -->
<div id="sizeChartModal" class="size-chart-popup">
  <div class="size-chart-popup-inner">
    <button class="close-size-chart">&times;</button>
    <h2>Size Chart</h2>
    <table class="size-chart-table">
      <thead>
        <tr>
          <th>Size</th>
          <th>Bust (inches)</th>
          <th>Waist (inches)</th>
          <th>Hip (inches)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>XS</td>
          <td>32</td>
          <td>24</td>
          <td>34</td>
        </tr>
        <tr>
          <td>S</td>
          <td>34</td>
          <td>26</td>
          <td>36</td>
        </tr>
        <tr>
          <td>M</td>
          <td>36</td>
          <td>28</td>
          <td>38</td>
        </tr>
        <tr>
          <td>L</td>
          <td>38</td>
          <td>30</td>
          <td>40</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var openBtn = document.querySelector('.size-chart-link');
    var closeBtn = document.querySelector('.close-size-chart');

    openBtn.addEventListener('click', function () {
      document.body.classList.add('size-chart-open');
    });

    closeBtn.addEventListener('click', function () {
      document.body.classList.remove('size-chart-open');
    });
    document.addEventListener('click', function (e) {
      if (document.body.classList.contains('size-chart-open') && e.target.classList.contains('size-chart-popup')) {
        document.body.classList.remove('size-chart-open');
      }
    });
  });
</script>

{% schema %}
{
  "name": "Product Media Slider",
  "settings": [],
  "presets": [
    {
      "name": "Product Media Slider"
    }
  ]
}
{% endschema %}
